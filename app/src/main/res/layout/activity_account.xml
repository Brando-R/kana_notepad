<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoteActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="412dp"
        android:layout_height="62dp"
        android:background="#F2DEEA"

        android:fontFamily="@font/amarante"
        android:gravity="center"
        android:text="Account"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="408dp"
        android:layout_height="324dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="old username:" />

        <EditText
            android:id="@+id/AccountName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/status_bar_item_app_background"
            android:backgroundTint="#E884C0"
            android:editable="false"
            android:gravity="center_vertical|left"
            android:hint="please enter old username"
            android:text="AccountName"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="old password:" />

        <EditText
            android:id="@+id/AccountPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/status_bar_item_app_background"
            android:backgroundTint="#E884C0"
            android:gravity="center_vertical|left"
            android:hint="please enter old password"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="new username:" />

        <EditText
            android:id="@+id/newAccountName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_vertical|left"
            android:hint="please enter new username"
            android:text="newAccountName"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="new password:" />

        <EditText
            android:id="@+id/newAccountPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_vertical|left"
            android:hint="please enter new password"
            android:textSize="22sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="386dp"
        android:layout_height="474dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="140dp"
        android:rotationX="0.5"
        android:rotationY="0.5"
        android:scaleX=".7"
        android:scaleY=".7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:srcCompat="@drawable/kana3" />

    <Button
        android:id="@+id/alterAccout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="76dp"
        android:text="Alter"
        android:backgroundTint="#A3E88CC3"
        android:textColor="#F4EEEE"
        app:layout_constraintStart_toEndOf="@+id/AccoutreturnButton"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <Button
        android:id="@+id/AccoutreturnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="76dp"
        android:text="Return"
        android:backgroundTint="#A3E88CC3"
        android:textColor="#F4EEEE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

</androidx.constraintlayout.widget.ConstraintLayout>